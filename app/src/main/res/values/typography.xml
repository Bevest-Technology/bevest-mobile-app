<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Headline -->
    <style name="BevestDesign.Typography" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/plus_jakarta_sans</item>
    </style>
    <style name="BevestDesign.Typography.SemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/plus_jakarta_sans_semibold</item>
    </style>
    <style name="BevestDesign.Typography.Headline1" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="BevestDesign.Typography.Headline2" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="BevestDesign.Typography.Headline3" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="BevestDesign.Typography.Headline4" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="BevestDesign.Typography.Headline5" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Body -->
    <style name="BevestDesign.Typography.Body1" parent="BevestDesign.Typography">
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>
    <style name="BevestDesign.Typography.Body2" parent="BevestDesign.Typography">
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>
    <style name="BevestDesign.Typography.Body3" parent="BevestDesign.Typography">
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>
    <style name="BevestDesign.Typography.BodySemiBold1" parent="BevestDesign.Typography.SemiBold">
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:lineSpacingExtra">10dp</item>
    </style>
    <style name="BevestDesign.Typography.BodySemiBold2" parent="BevestDesign.Typography.SemiBold">
