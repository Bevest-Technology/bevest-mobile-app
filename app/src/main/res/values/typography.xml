    <!-- Button -->
    <style name="BevestDesign.Typography.ButtonLink" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.00125</item>
    </style>
    <style name="BevestDesign.Typography.ButtonLinkSmall" parent="BevestDesign.Typography.SemiBold">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.00125</item>
    </style>

