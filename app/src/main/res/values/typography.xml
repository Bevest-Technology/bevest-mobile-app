        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:lineSpacingExtra">8dp</item>
