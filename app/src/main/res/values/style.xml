<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BevestDesign.Component.ButtonFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_filled_selector</item>
        <item name="android:textAppearance">?attr/dsTypographyButtonNormal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="BevestDesign.Component.ButtonOutlined" parent="BevestDesign.Component.ButtonFilled">
        <item name="android:background">@drawable/button_outlined_selector</item>
        <item name="android:textColor">@drawable/selector_outlined_stroke</item>
    </style>

    <style name="BevestDesign.Component.ButtonText" parent="BevestDesign.Component.ButtonOutlined">
        <item name="android:background">@drawable/button_text_selector</item>
    </style>

    <style name="BevestDesign.Component.EditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/edittext_box_selector</item>
        <item name="hintTextColor">@color/edittext_hinttext_selector</item>
        <item name="android:textColorHint">@color/edittext_hinttext_selector</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="BevestDesign.Component.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/BevestDesign.Typography.Headline2</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_ios_new_24</item>
        <item name="navigationIconTint">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
</resources>