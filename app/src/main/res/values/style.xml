<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BevestDesign.Component.ButtonFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_filled_selector</item>
        <item name="android:textAppearance">?attr/dsTypographyButtonNormal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="BevestDesign.Component.ButtonOutlined" parent="BevestDesign.Component.ButtonFilled">
        <item name="android:background">@drawable/button_outlined_selector</item>
        <item name="android:textColor">@drawable/selector_outlined_stroke</item>
    </style>

    <style name="BevestDesign.Component.ButtonText" parent="BevestDesign.Component.ButtonOutlined">
        <item name="android:background">@drawable/button_text_selector</item>
    </style>

    <style name="BevestDesign.Component.EditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="boxStrokeColor">@color/edittext_box_selector</item>
        <item name="hintTextColor">@color/edittext_hinttext_selector</item>
        <item name="android:textColorHint">@color/edittext_hinttext_selector</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="hintTextAppearance">?attr/dsTypographyBody1</item>
        <item name="android:textAppearance">?attr/dsTypographyBody1</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="BevestDesign.Component.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">@drawable/vector_back</item>
        <item name="titleTextColor">@color/ds_primary</item>
        <item name="titleMarginBottom">19dp</item>
        <item name="titleTextAppearance">@style/BevestDesign.Typography.Headline2</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="BevestDesign.Component.CardView.Choose" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconSize">0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/cardview_color_selector</item>
    </style>

    <style name="BevestDesign.Component.CardView.Deskripsi" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/ds_neutral_20</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>