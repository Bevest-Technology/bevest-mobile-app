<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BevestDesign.Component.ButtonFilled" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_filled_selector</item>
        <item name="android:textAppearance">?attr/dsTypographyButtonNormal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BevestDesign.Component.ButtonOutlined" parent="BevestDesign.Component.ButtonFilled">
        <item name="android:background">@drawable/button_outlined_selector</item>
        <item name="android:textColor">@drawable/selector_outlined_stroke</item>
    </style>

    <style name="BevestDesign.Component.ButtonText" parent="BevestDesign.Component.ButtonOutlined">
        <item name="android:background">@drawable/button_text_selector</item>
    </style>
</resources>