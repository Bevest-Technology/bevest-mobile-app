<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/profile"
            style="@style/BevestDesign.Typography.Headline1"
            android:textColor="@color/ds_primary"
            android:gravity="center_vertical"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/tv_nama_bisnis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                style="@style/BevestDesign.Typography.BodySemiBold1"
                tools:text="Warung Kopi Koda"
                android:textColor="@color/ds_primary"
                app:layout_constraintTop_toTopOf="parent"/>
            
            <ImageView
                android:id="@+id/iv_profile_photo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_bisnis"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@tools:sample/avatars"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/iv_profile_photo">

                <RelativeLayout
                    android:id="@+id/layout_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="26dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/top_divider">
                    <ImageView
                        android:id="@+id/ic_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile"/>
                    <TextView
                        android:id="@+id/tv_edit_profile"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/BevestDesign.Typography.BodySemiBold2"
                        android:text="@string/edit_profile"
                        android:textColor="@color/ds_neutral_80"
                        android:layout_toEndOf="@+id/ic_edit_profile"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ds_neutral_30"/>
                <RelativeLayout
                    android:id="@+id/layout_security"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="26dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/top_divider">
                    <ImageView
                        android:id="@+id/ic_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_security"/>
                    <TextView
                        android:id="@+id/tv_security"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/BevestDesign.Typography.BodySemiBold2"
                        android:text="@string/security"
                        android:textColor="@color/ds_neutral_80"
                        android:layout_toEndOf="@+id/ic_security"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ds_neutral_30"/>
                <RelativeLayout
                    android:id="@+id/layout_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="26dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/top_divider">
                    <ImageView
                        android:id="@+id/ic_faq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_faq"/>
                    <TextView
                        android:id="@+id/tv_faq"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/BevestDesign.Typography.BodySemiBold2"
                        android:text="@string/faq"
                        android:textColor="@color/ds_neutral_80"
                        android:layout_toEndOf="@+id/ic_faq"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ds_neutral_30"/>
                <RelativeLayout
                    android:id="@+id/layout_live_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="26dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/top_divider">
                    <ImageView
                        android:id="@+id/ic_live_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_live_support"/>
                    <TextView
                        android:id="@+id/tv_live_support"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/BevestDesign.Typography.BodySemiBold2"
                        android:text="Live Support"
                        android:textColor="@color/ds_neutral_80"
                        android:layout_toEndOf="@+id/ic_live_support"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ds_neutral_30"/>
                <RelativeLayout
                    android:id="@+id/layout_keluar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="26dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/top_divider">
                    <ImageView
                        android:id="@+id/ic_keluar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_logout"/>
                    <TextView
                        android:id="@+id/tv_keluar"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/BevestDesign.Typography.BodySemiBold2"
                        android:text="@string/keluar"
                        android:textColor="@color/ds_negative_60"
                        android:layout_toEndOf="@+id/ic_keluar"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_right_arrow"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ds_neutral_30"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>