<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.businessowner.ownerregistration.BusinessEntityDataFragment">

    <TextView
        android:id="@+id/tv_question"
        style="@style/BevestDesign.Typography.BodySemiBold2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_badan_usaha" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_business_name"
        style="@style/BevestDesign.Component.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama_badan_usaha"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_brand_name"
        style="@style/BevestDesign.Component.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama_brand"
            android:imeOptions="actionNext"
            android:inputType="number|phone"
            android:maxLines="1"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_business_category"
        style="@style/BevestDesign.Component.DropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/kategori_bisnis"
        android:layout_marginTop="16dp">

        <AutoCompleteTextView
            android:id="@+id/act_business_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:inputType="none"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_address"
        style="@style/BevestDesign.Component.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/alamat_bisnis"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/layout_business_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_business_banner"
            style="@style/BevestDesign.Component.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_business_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/unggah_bukti_brand_usaha_banner"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:textAppearance="@style/BevestDesign.Typography.Body1" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/iv_business_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/til_business_banner"
            android:layout_alignTop="@id/til_business_banner"
            android:layout_alignEnd="@id/til_business_banner"
            android:layout_alignBottom="@id/til_business_banner"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/btn_foto_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/til_business_banner"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/color_transparent"
            android:src="@drawable/ic_upload" />
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>