<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.businessowner.businessvaluation.BusinessCallProcessActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_page_img"
        android:layout_width="287dp"
        android:layout_height="328dp"
        android:layout_gravity="center"
        android:src="@drawable/mascot_sad_happy_animation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_call_progress"
        style="@style/BevestDesign.Typography.BodySemiBold1"
        android:textColor="@color/ds_blue_60"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gif_page_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>