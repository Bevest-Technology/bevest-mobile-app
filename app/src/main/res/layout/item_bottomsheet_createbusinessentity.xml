<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BevestDesign.Typography.Headline3"
        android:textAlignment="center"
        android:text="Apakah Anda setuju untuk menggunakan bantuan pembuatan PT untuk bisnis Anda?"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ya, saya setuju"
        style="@style/BevestDesign.Component.ButtonFilled"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_disaggre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tidak setuju"
        style="@style/BevestDesign.Component.ButtonOutlined"
        app:layout_constraintTop_toBottomOf="@id/btn_agree"/>


</androidx.constraintlayout.widget.ConstraintLayout>