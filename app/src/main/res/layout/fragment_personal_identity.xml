<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.businessowner.ownerregistration.PersonalIdentityFragment">

    <TextView
        android:id="@+id/tv_question"
        style="@style/BevestDesign.Typography.BodySemiBold2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/identitas_pribadi" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_owner_name"
        style="@style/BevestDesign.Component.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama_lengkap_owner"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_active_whatsapp_number"
        style="@style/BevestDesign.Component.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_active_whatsapp_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/no_whatsapp_aktif"
            android:imeOptions="actionNext"
            android:inputType="number|phone"
            android:maxLines="1"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_address"
        style="@style/BevestDesign.Component.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/alamat_lengkap"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:textAppearance="@style/BevestDesign.Typography.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/layout_owner_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_owner_profile_photo"
            style="@style/BevestDesign.Component.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_owner_profile_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="@string/unggah_foto_owner"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:textAppearance="@style/BevestDesign.Typography.Body1" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/iv_owner_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/til_owner_profile_photo"
            android:layout_alignTop="@id/til_owner_profile_photo"
            android:layout_alignEnd="@id/til_owner_profile_photo"
            android:layout_alignBottom="@id/til_owner_profile_photo"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/btn_foto_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/til_owner_profile_photo"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/color_transparent"
            android:src="@drawable/ic_upload" />
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>