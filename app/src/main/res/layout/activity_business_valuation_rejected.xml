<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.businessowner.businessvaluation.BusinessValuationRejectedActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <ImageView
                android:id="@+id/iv_mascott"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bevest_blue_mascot_sad"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_sukses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maaf"
                style="@style/BevestDesign.Typography.BodySemiBold1"
                android:textColor="@color/ds_blue_60"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_mascott"/>

            <TextView
                android:id="@+id/tv_deskripsi_valuasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deskripsi_valuasi_gagal"
                style="@style/BevestDesign.Typography.BodySemiBold1"
                android:textAlignment="center"
                android:textColor="@color/ds_blue_60"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sukses"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ajukan_kembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BevestDesign.Component.ButtonFilled"
        android:text="@string/ajukan_kembali"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_bevest_academy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bevest_academy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BevestDesign.Component.ButtonOutlined"
        android:text="@string/baca_bevest_academy"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>